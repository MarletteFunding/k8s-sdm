{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "name": "spring-rest"
  },
  "spec": {
    "replicas": 1,
    "revisionHistoryLimit": 3,
    "selector": {
      "matchLabels": {
        "app": "spring-rest"
      }
    },
    "template": {
      "metadata": {
        "name": "spring-rest",
        "labels": {
          "app": "spring-rest"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "spring-rest",
            "image": "gcr.io/reference-implementation-1/spring-rest-seed:0.0.1-SNAPSHOT",
            "imagePullPolicy": "Always",
            "resources": {
              "limits": {
                "cpu": "300m",
                "memory": "384Mi"
              },
              "requests": {
                "cpu": "100m",
                "memory": "320Mi"
              }
            },
            "readinessProbe": {
              "httpGet": {
                "path": "/info",
                "port": "http",
                "scheme": "HTTP"
              },
              "initialDelaySeconds": 60,
              "timeoutSeconds": 3,
              "periodSeconds": 10,
              "successThreshold": 1,
              "failureThreshold": 3
            },
            "livenessProbe": {
              "httpGet": {
                "path": "/health",
                "port": "http",
                "scheme": "HTTP"
              },
              "initialDelaySeconds": 60,
              "timeoutSeconds": 3,
              "periodSeconds": 10,
              "successThreshold": 1,
              "failureThreshold": 3
            },
            "ports": [
              {
                "name": "http",
                "containerPort": 8080,
                "protocol": "TCP"
              }
            ]
          }
        ]
      }
    },
    "strategy": {
      "type": "RollingUpdate",
      "rollingUpdate": {
        "maxUnavailable": 0,
        "maxSurge": 1
      }
    }
  }
}
